<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ProgressBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:layout_alignParentBottom="true"
        android:id="@+id/progress_bar"
        android:layout_alignParentRight="true"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/score"
        android:layout_above="@+id/progress_bar"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="12dp"
        android:layout_marginRight="12dp"
        android:padding="20dp"
        android:text="@string/initial_score"
        android:textStyle="bold"
        android:textSize="25sp"
        android:textColor="@color/scoreTextViewColor"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/question_1"
        android:layout_marginTop="55dp"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:id="@+id/question_text_view"
        android:padding="20dp"
        android:textStyle="bold"
        android:textColor="@color/questionTextViewColor"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/score"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:padding="20dp"
        android:orientation="horizontal">

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/true_button"
            android:text="@string/true_button"
            android:textColor="@color/trueButtonColor"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@color/trueButtonBackground"
            android:textSize="25sp"/>

        <Button
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/false_button"
            android:text="@string/false_button"
            android:textColor="@color/trueButtonColor"
            style="@style/Base.Widget.AppCompat.Button.Borderless"
            android:background="@color/falseButtonBackground"
            android:textSize="25sp"/>

    </LinearLayout>


</RelativeLayout>